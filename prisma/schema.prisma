generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Address {
  id     String @id @default(uuid())
  street String
  number String
  ref    String
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  cpf      String   @unique
  password String
  phone    String
  address  Address?
}
